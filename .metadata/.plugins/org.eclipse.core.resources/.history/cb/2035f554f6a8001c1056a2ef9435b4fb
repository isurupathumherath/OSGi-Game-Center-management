	@Override
	public String addToCart(String gameName, int quantity) {
		for(Game game : DataStore.gameList) {
			count ++;
			if(game.getGameName().equals(gameName)) {
				gameUpdate = game;
				value = true;
				break;
			}
		}
		cart.put(null, null);
		return null;
	}

